# MLB Video Pipeline - Environment Configuration
# Copy to .env and fill in your values: cp .env.example .env

# =============================================================================
# API Keys (Required)
# =============================================================================

# OpenAI - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here

# ElevenLabs - Get from https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_key_here
ELEVENLABS_VOICE_ID=your_preferred_voice_id

# YouTube Data API - Get from https://console.cloud.google.com/
YOUTUBE_API_KEY=your_youtube_key_here
YOUTUBE_CLIENT_ID=your_client_id
YOUTUBE_CLIENT_SECRET=your_client_secret

# =============================================================================
# AWS Credentials (For Deployment)
# =============================================================================

AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
S3_BUCKET_NAME=mlb-video-pipeline

# =============================================================================
# Paths (Optional - defaults work for local development)
# =============================================================================

DATA_DIR=./data
OUTPUT_DIR=./outputs
MODELS_DIR=./models
LOGS_DIR=./logs

# =============================================================================
# Application Settings
# =============================================================================

# MLB API
MLB_API_TIMEOUT=30
MAX_RETRIES=3

# Cost Controls
DAILY_COST_LIMIT=10.0
OPENAI_MAX_TOKENS=500
ELEVENLABS_MONTHLY_CHARS=100000

# Video Settings
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920
VIDEO_FPS=30

# Logging
LOG_LEVEL=INFO

# =============================================================================
# Feature Flags
# =============================================================================

ENABLE_COST_TRACKING=true
ENABLE_YOUTUBE_UPLOAD=false
DRY_RUN=false
